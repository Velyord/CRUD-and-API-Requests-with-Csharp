@model IEnumerable<DistributedSystems2020.Models.CarModel>

@{
    ViewBag.Title = "е-Книги";
}

<style> body { background-image: url('/Content/images/ebook100.png');} </style>

<h2>@ViewBag.Title</h2>

<div class="boxing" style="margin-top:20px">

    <div class="row">
        @using (Html.BeginForm("Index", "Cars", FormMethod.Get))
        {
            <div class="col-md-3">
                @Html.TextBox("name", "", new { @class = "form-control", @placeholder = "Заглавие" })
            </div>
            <div class="col-md-3">
                @Html.TextBox("model", "", new { @class = "form-control", @placeholder = "Автор" })
            </div>
            <div class="col-md-3">
                @Html.TextBox("year", "", new { @class = "form-control", @placeholder = "Година на издаване", type = "number" })
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-info">
                    Филтрирай
                </button>
            </div>
        }
    </div>

    <p style="margin-top: 20px;">@Html.ActionLink("Въведи нова книга", "Create")</p>

    <table class="table">
        <tr>
            <th>
                <!--@Html.DisplayNameFor(model => model.Name)-->
                Заглавие
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Model)-->
                Автор
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Year)-->
                Година на издаване
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.ActionLink("Промени", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Детайли", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Изтрий", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>