@model DistributedSystems2020.Models.CarModel

@{
    ViewBag.Title = "Изтрий";
}

<style> body { background-image: url('/Content/images/ebook100.png'); } </style>

<h2>@ViewBag.Title</h2>

<div class="boxing" style="margin-top:20px">

    <h3>Сигурни ли сте, че искате да изтриете това?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <!--@Html.DisplayNameFor(model => model.Name)-->
                 Заглавие
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                <!--@Html.DisplayNameFor(model => model.Model)-->
                 Автор
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Model)
            </dd>

            <dt>
                <!--@Html.DisplayNameFor(model => model.Year)-->
                 Година на издаване
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Year)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Изтрий" class="btn btn-default" /> |
                @Html.ActionLink("Назад към списък", "Index")
            </div>
        }
    </div>
</div>